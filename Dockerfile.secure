# Secure Dockerfile for YouLama - Hardened for Production
# Optimized for NVIDIA RTX 4090

FROM nvidia/cuda:12.3.2-cudnn9-runtime-ubuntu22.04 AS base

# Security: Don't run as root
ARG APP_USER=youlama
ARG APP_UID=1000
ARG APP_GID=1000

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    # Security: Disable Python hash randomization for reproducibility
    PYTHONHASHSEED=random \
    # CUDA optimization for RTX 4090
    CUDA_MODULE_LOADING=LAZY \
    PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Install system dependencies with security updates
RUN apt-get update && apt-get upgrade -y && apt-get install -y --no-install-recommends \
    python3.10 \
    python3.10-venv \
    python3-pip \
    ffmpeg \
    ca-certificates \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* \
    # Security: Remove unnecessary setuid/setgid binaries
    && find / -perm /6000 -type f -exec chmod a-s {} \; 2>/dev/null || true

# Create non-root user
RUN groupadd --gid ${APP_GID} ${APP_USER} \
    && useradd --uid ${APP_UID} --gid ${APP_GID} --shell /bin/bash --create-home ${APP_USER}

# Set working directory
WORKDIR /app

# Copy requirements first for caching
COPY --chown=${APP_USER}:${APP_USER} requirements.txt .

# Install Python dependencies
RUN pip3 install --no-cache-dir -r requirements.txt

# Copy application code with proper ownership
COPY --chown=${APP_USER}:${APP_USER} app.py .
COPY --chown=${APP_USER}:${APP_USER} youtube_handler.py .
COPY --chown=${APP_USER}:${APP_USER} ollama_handler.py .
COPY --chown=${APP_USER}:${APP_USER} config.ini .

# Create directories for models and temp files with proper permissions
RUN mkdir -p /app/models /app/temp \
    && chown -R ${APP_USER}:${APP_USER} /app

# Security: Set restrictive file permissions
RUN chmod 755 /app \
    && chmod 644 /app/*.py /app/config.ini \
    && chmod 755 /app/models /app/temp

# Switch to non-root user
USER ${APP_USER}

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD python3 -c "import urllib.request; urllib.request.urlopen('http://127.0.0.1:7860')" || exit 1

# Expose port
EXPOSE 7860

# Security labels
LABEL maintainer="private" \
      version="1.0-secure" \
      description="YouLama - Secure YouTube Transcription Service" \
      security.privileged="false"

# Set entrypoint
ENTRYPOINT ["python3", "app.py"]
